<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:fab="http://schemas.android.com/apk/res-auto"
             xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CameraActivity">

        <agency.alterway.edillion.views.widgets.CameraPreview
            android:id="@+id/surfaceview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_takePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/accent"
            fab:fab_colorPressed="@color/accent_pressed"
            fab:fab_addButtonStrokeVisible="true"
            app:fab_icon="@drawable/ic_action_camera"
            android:layout_marginBottom="16dp"
            android:layout_gravity="bottom|center" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_selectPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_size="mini"
            fab:fab_colorNormal="@color/primary_dark"
            fab:fab_colorPressed="@color/primary"
            fab:fab_addButtonStrokeVisible="true"
            app:fab_icon="@drawable/ic_action_pics"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="bottom|end" />

</FrameLayout>