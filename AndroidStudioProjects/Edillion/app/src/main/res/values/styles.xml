<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white_fab</item>
    </style>

    <style name="AppTheme.ScanTheme" parent="AppTheme">
        <item name="android:actionMenuTextColor">@color/primary_dark</item>
    </style>

    <style name="AppTheme.LoginTheme" parent="AppTheme">
    </style>

    <style name="TimeEntryTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:singleLine">true</item>
    </style>

    <style name="TimeEntryDesc" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:singleLine">true</item>
    </style>


</resources>
