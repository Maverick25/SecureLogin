<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white_fab</item>
    </style>

    <style name="AppTheme.ScanTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">@color/primary</item>
        <item name="android:actionMenuTextColor">@color/primary_dark</item>
    </style>

    <style name="AppTheme.LoginTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

</resources>